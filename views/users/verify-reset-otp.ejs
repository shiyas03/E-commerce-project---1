<%- include('../layouts/loginHeader.ejs') %>
    <!-- Main Section-->
    <section class="mt-0 overflow-hidden mt-5 d-flex justify-content-center align-items-center p-4">
        <!-- Page Content Goes Here -->

        <!-- Login Form-->
        <div class="col col-md-8 col-lg-6 col-xxl-5"
            style="box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;">
            <!-- Logo-->
            <a class="navbar-brand fw-bold fs-3 flex-shrink-0 order-0 align-self-center justify-content-center d-flex mx-0 px-0"
                href="./index.html">
                <div class="d-flex align-items-center">
                    <svg class="f-w-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 77.53 72.26">
                        <path
                            d="M10.43,54.2h0L0,36.13,10.43,18.06,20.86,0H41.72L10.43,54.2Zm67.1-7.83L73,54.2,68.49,62,45,48.47,31.29,72.26H20.86l-5.22-9L52.15,0H62.58l5.21,9L54.06,32.82,77.53,46.37Z"
                            fill="currentColor" fill-rule="evenodd" />
                    </svg>
                    <h1 class="text-center fs-2 ms-2 fw-bold text-body">Traderow</h1>
                </div>
            </a>

            <!-- / Logo--> 
            <div class="shadow-xl  p-5 bg-white">
                <h1 class="text-center fs-2 mb-4 fw-bold">Verification</h1>
                <p class="text-muted text-center">You will get 6 digtit OTP via <span class="fs-6">SMS</span></p>
                <div class="justify-content-center m-5">
                    <form method="post" class="m-5" id="otp-form">
                        <div class="d-flex align-items-center justify-content-between mt-2">
                            <input type="text" class="form-control me-2" maxlength="6" placeholder="" name="otp" id="otp-number">
                        </div>
                        <p class="login-alert"><%= typeof otpError !== 'undefined' ? otpError : "" %></p>
                        <button type="submit" class="btn btn-dark d-block w-100 my-3" onclick="resetOtpValidation(event)">Verify OTP</button>
                    </form>
                </div>
                <p class="d-block text-center text-muted my-4"><a class="text-muted" href="/resend-otp">Resend OTP</a></p>
            </div>
        </div>
        <!-- / Login Form-->

        <!-- /Page Content --> 
    </section>
    <!-- / Main Section-->


    <%- include('../layouts/loginFooter.ejs') %>