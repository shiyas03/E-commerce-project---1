<%- include('../layouts/loginHeader.ejs') %>

    <!-- Main Section-->
    <section
        class="mt-0 overflow-hidden mt-5 d-flex justify-content-center align-items-center p-4">
        <!-- Page Content Goes Here -->

        <!-- Login Form-->
        <div class="col col-md-8 col-lg-6 col-xxl-5" style="box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;">
            <!-- Logo-->
            <a class="navbar-brand fw-bold fs-3 flex-shrink-0 order-0 align-self-center justify-content-center d-flex mx-0 px-0" href="./index.html">
                <div class="d-flex align-items-center">
                    <svg class="f-w-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 77.53 72.26"><path d="M10.43,54.2h0L0,36.13,10.43,18.06,20.86,0H41.72L10.43,54.2Zm67.1-7.83L73,54.2,68.49,62,45,48.47,31.29,72.26H20.86l-5.22-9L52.15,0H62.58l5.21,9L54.06,32.82,77.53,46.37Z" fill="currentColor" fill-rule="evenodd"/></svg>
                    <h1 class="text-center fs-2 ms-2 fw-bold text-dark">Traderow</h1>
                </div>
            </a>
            <!-- / Logo-->
            <div class="shadow-xl p-4 p-lg-5 bg-white">
                <h1 class="text-center fs-2 mb-5 fw-bold">Verification</h1>
                <p class="text-muted">we will send you a <span class="fs-6">One Time Password</span> on your phone number</p>
                <form method="post" id="number-form">
                    <div class="form-group">
                      <label for="forget-password" class="form-label">Phone Number</label>
                      <input type="tel" class="form-control" id="mobile-number" name="number" placeholder="Enter your number">
                      <p class="login-alert"></p>
                    </div>
                    <button type="submit" class="btn btn-dark d-block w-100 my-4" onclick="numberValidation(event)">Get OTP</button>
                </form>
            </div>
        </div>

        <!-- / Login Form-->

        <!-- /Page Content -->
    </section>
    <!-- / Main Section-->

