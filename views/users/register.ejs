<%- include('../layouts/loginHeader.ejs') %>

  <!-- Main Section-->
  <section class="mt-0 overflow-hidden vh-100 d-flex justify-content-center align-items-center">
    <!-- Page Content Goes Here -->

    <!-- Login Form-->
    <div class="col-md-8 col-lg-6 col-xxl-5 col-sm-8 col-10"
      style="box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;">

      <div class="shadow-xl pe-lg-5 ps-lg-5 p-4 bg-white">

        <!-- Logo-->
        <div class="fw-bold fs-3 flex-shrink-0 order-0 align-self-center justify-content-center d-flex mx-0 px-0 mb-4">
          <svg class="f-w-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 77.53 72.26">
            <path
              d="M10.43,54.2h0L0,36.13,10.43,18.06,20.86,0H41.72L10.43,54.2Zm67.1-7.83L73,54.2,68.49,62,45,48.47,31.29,72.26H20.86l-5.22-9L52.15,0H62.58l5.21,9L54.06,32.82,77.53,46.37Z"
              fill="currentColor" fill-rule="evenodd" />
          </svg>
          <h1 class="text-center fs-2 ms-2 fw-bold text-dark">Traderow</h1>
        </div>
        <!-- / Logo-->

        <h1 class="text-center fs-3 fw-bold">Open Account</h1>
        <form method="post" action="" id="register-form">
          <div class="form-group">
            <label class="form-label" for="register-fname">User name</label>
            <input type="text" class="form-control" id="register-fname" placeholder="Enter name" value="<%= typeof existingData !=='undefined' ? existingData.name : ""  %>" 
            name="name" >
          </div>
          <div class="form-group">
            <label class="form-label" for="register-email">Email address</label>
            <input type="email" class="form-control" id="register-email" placeholder="name@email.com" value="<%= typeof existingData !=='undefined' ? existingData.email : ""  %>" name="email">
            <p class="login-alert">
              <%= typeof emailExist !=='undefined' ? emailExist : '' %>
            </p>
          </div>
          <div class="form-group">
            <label class="form-label" for="register-mnumber">Mobile number</label>
            <input type="tel" class="form-control" id="register-number" placeholder="Enter your mobile number" value="<%= typeof existingData !=='undefined' ? existingData.mobileNumber : ""  %>"
              name="mobileNumber">
            <p class="login-alert">
              <%= typeof numberExist !=='undefined' ? numberExist : '' %>
            </p>
          </div>
          <div class="form-group">
            <label class="form-label" for="register-password">Password</label>
            <input type="password" class="form-control" id="register-password" placeholder="Enter your password"
              name="password">
          </div>
          <div class="form-group">
            <label class="form-label" for="confirm-password">Confirm Password</label>
            <input type="password" class="form-control" id="confirm-password" placeholder="Confirm your password"
              name="confirmPassword">
          </div>
          <button type="submit" class="btn btn-dark d-block w-100 my-4" onclick="registerValidation(event)">Sign
            Up</button>
        </form>
        <p class="d-block text-center text-muted">Already registered? <a class="text-muted" href="login">Login here.</a>
        </p>
      </div>

    </div>
    <!-- / Login Form-->

    <!-- /Page Content -->
  </section>
  <!-- / Main Section-->

  <%- include('../layouts/loginFooter.ejs') %>